---
interface Props {
  date: Date;
}

const { date } = Astro.props;
const dateObj = new Date(date); // Now date is defined here!
---

<time datetime={dateObj.toISOString()}>
  {
    dateObj.toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
    })
  }
</time>
