			</svg>
			<span class="text-sm font-medium text-yellow-600 dark:text-yellow-400 group-hover:text-yellow-700 dark:group-hover:text-yellow-300 transition-colors" id="copy-link-text">Copy Link</span>
		</button>
	</div>
</div>

<script>
	const copyButton = document.getElementById('copy-link-btn');
	const copyText = document.getElementById('copy-link-text');

	if (copyButton && copyText) {
		copyButton.addEventListener('click', async () => {
			const url = copyButton.getAttribute('data-url');
			if (url) {
				try {
					await navigator.clipboard.writeText(url);
					copyText.textContent = 'Copied!';
					setTimeout(() => {
						copyText.textContent = 'Copy Link';
					}, 2000);
				} catch (err) {
					console.error('Failed to copy:', err);
				}
			}
		});
	}
</script>